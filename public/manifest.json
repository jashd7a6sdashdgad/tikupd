{
  "name": "Mahboob Personal Assistant",
  "short_name": "MahboobPA",
  "description": "Your comprehensive personal assistant for managing expenses, contacts, shopping lists, diary entries, and more with AI-powered features.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#2563eb",
  "orientation": "portrait-primary",
  "scope": "/",
  "categories": ["productivity", "finance", "lifestyle"],
  "lang": "en",
  "dir": "ltr",
