# Business Configuration Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# BUSINESS INFORMATION
# =============================================================================

# Company/Personal Information
BUSINESS_NAME="Your Company Name"
BUSINESS_DOMAIN=yourdomain.com
BUSINESS_EMAIL=contact@yourdomain.com
BUSINESS_PHONE=+1234567890
BUSINESS_LOCATION="Your City, Country"
BUSINESS_DESCRIPTION="Your business description"
BUSINESS_CURRENCY=USD
BUSINESS_TIMEZONE=America/New_York
BUSINESS_FISCAL_YEAR_START=01-01

# =============================================================================
# BUDGET LIMITS (in your default currency)
# =============================================================================

# Monthly budget limits for different categories
BUDGET_FOOD=300
BUDGET_TRANSPORTATION=150
BUDGET_SHOPPING=200
BUDGET_UTILITIES=100
BUDGET_ENTERTAINMENT=100
BUDGET_MEDICAL=150
BUDGET_BUSINESS=250
BUDGET_TRAVEL=500
BUDGET_EDUCATION=200
BUDGET_GENERAL=100

# =============================================================================
# TRAVEL & CURRENCY SETTINGS
# =============================================================================

# Default currency for travel expenses
TRAVEL_DEFAULT_CURRENCY=USD

# =============================================================================
# BANKING & FINANCIAL
# =============================================================================

# Bank email addresses for automatic expense processing
# Separate multiple emails with commas
OMANI_BANK_EMAILS=noreply@bank1.com,alerts@bank2.com,noreply@bank3.com

# =============================================================================
# API KEYS & SERVICES
# =============================================================================

# Weather API (required)
WEATHER_API_KEY=your_weather_api_key_here

# Google AI Studio (required)
GEMINI_API_KEY=your_gemini_api_key_here

# N8N Integration (optional)
N8N_API_URL=https://your-n8n-instance.com
N8N_API_KEY=your_n8n_api_key_here
N8N_VOICE_WEBHOOK_URL=https://your-n8n-instance.com/webhook/voice

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
VOICE_ASSISTANT_ENABLED=true
EXPENSE_TRACKING_ENABLED=true
SOCIAL_MEDIA_ENABLED=true
BUSINESS_MANAGEMENT_ENABLED=true
TRAVEL_COMPANION_ENABLED=true
MOCK_DEPLOYMENT_ENABLED=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# API timeouts and retry settings
API_TIMEOUT=30000
RETRY_COUNT=3
RETRY_DELAY=1000
MAX_CONVERSATION_HISTORY=10

# =============================================================================
# DEBUG & DEVELOPMENT
# =============================================================================

# Development settings
DEBUG_MODE=false
NODE_ENV=development
