# ==========================================
# MAHBOOB PERSONAL ASSISTANT CONFIGURATION
# ==========================================
# Copy this file to .env.local and fill in your actual values

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Personal Information (for calendar)
MAHBOOB_BIRTHDAY=1990-01-01

# CRITICAL: API Keys and Tokens (REQUIRED)
WEATHER_API_KEY=your_weather_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# N8N Configuration
N8N_API_URL=https://your-n8n-instance.com
N8N_API_KEY=your_n8n_api_key
N8N_WEBHOOK_URL=https://your-n8n-instance.com
N8N_VOICE_WEBHOOK_URL=https://your-n8n-instance.com/webhook/voice

# Google Services
GOOGLE_CLOUD_PROJECT_ID=your_project_id
EXPENSES_SPREADSHEET_ID=your_google_sheets_id_here
EXPENSES_SHEET_NAME=Expenses
GMAIL_API_URL=https://gmail.googleapis.com/gmail/v1

# Bank Email Automation Configuration
BANK_EMAIL=noreply@bank.com
EXPENSE_LABEL=Expense Logged

# Social Media APIs
FACEBOOK_API_URL=https://graph.facebook.com/v18.0
FACEBOOK_USER_TOKEN=your_facebook_user_access_token
MESSENGER_USER_TOKEN=your_facebook_user_access_token

# External APIs
FIRECRAWL_API_URL=https://api.firecrawl.dev/v0
FIRECRAWL_API_KEY=your_firecrawl_api_key

# Spotify Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Business Configuration (Optional - overrides config/social.json)
BUSINESS_NAME="Your Business Name"
BUSINESS_DOMAIN=yourdomain.com
BUSINESS_EMAIL=contact@yourdomain.com
BUSINESS_PHONE=+1234567890
BUSINESS_LOCATION="Your City, Country"
BUSINESS_DESCRIPTION="Your business description"

# Social Media URLs (Optional - overrides config/social.json)
SOCIAL_FACEBOOK_URL=https://facebook.com/yourpage
SOCIAL_INSTAGRAM_URL=https://instagram.com/youraccount
SOCIAL_TWITTER_URL=https://twitter.com/youraccount
SOCIAL_LINKEDIN_URL=https://linkedin.com/company/yourcompany
SOCIAL_YOUTUBE_URL=https://youtube.com/@yourchannel
SOCIAL_WEBSITE_URL=https://yourwebsite.com

# Timeout and Performance Settings
API_TIMEOUT=30000
RETRY_COUNT=3
RETRY_DELAY=1000
UPLOAD_TIMEOUT=60000
VOICE_TIMEOUT=10000
LOCATION_TIMEOUT=10000
LOCATION_MAX_AGE=600000
MAX_CONVERSATION_HISTORY=10

# Feature Flags
RAMADAN_MODE_ENABLED=false
MOCK_DEPLOYMENT_ENABLED=true
VOICE_ASSISTANT_ENABLED=true
EXPENSE_TRACKING_ENABLED=true
SOCIAL_MEDIA_ENABLED=true
DEBUG_MODE=false

# MCP Configuration
MCP_MEDICAL_ENDPOINT=http://localhost:3001/mcp/medical
MCP_RESEARCH_ENDPOINT=http://localhost:3001/mcp/research
MCP_GENERAL_ENDPOINT=http://localhost:3001/mcp/general
N8N_MCP_ENDPOINT=http://localhost:3001/mcp/n8n

# Social Media Active Flags
SOCIAL_FACEBOOK_ACTIVE=true
SOCIAL_INSTAGRAM_ACTIVE=true
SOCIAL_TWITTER_ACTIVE=true
SOCIAL_LINKEDIN_ACTIVE=true
SOCIAL_YOUTUBE_ACTIVE=true
SOCIAL_WEBSITE_ACTIVE=true

# Upload and File Settings
UPLOAD_DIR=/uploads
RECEIPTS_DIR=/uploads/receipts

# Cron Job Configuration
CRON_SECRET=your_secure_random_string_here

# Optional: Google Service Account for automated cron jobs
# (Recommended for production automated processing)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Cron Job Examples:
# Vercel: Create a vercel.json file with cron configuration
# GitHub Actions: Use workflow_dispatch or schedule
# Cloud Functions: Deploy as a scheduled function
# Traditional Cron: 0 */2 * * * curl -H "Authorization: Bearer ${CRON_SECRET}" https://yourapp.com/api/cron/process-bank-emails